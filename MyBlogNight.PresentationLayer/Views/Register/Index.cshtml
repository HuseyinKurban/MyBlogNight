@model RegisterViewModel
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <br />
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email" />
        <br />
        <label>Kullanıcı Adınız</label>
        <input type="text" class="form-control" asp-for="Username" />
        <br />
        <label>Şifreniz</label>
        <input type="text" class="form-control" asp-for="Password" required />
        <br />
        <button class="btn btn-primary">Kaydol</button>
        @* Hata Mesajları *@
        <div class="text-primary" asp-validation-summary="ModelOnly"></div>
    </form>
</div>
