@model Article
@{
    ViewData["Title"] = "UpdateArtilce";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form method="post">
    <div class="container">
        <br /><br />
        <input type="hidden" asp-for="ArticleId" />
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Küçük Kapak Fotoğrafı</label>
        <input type="text" asp-for="CoverImageUrl" class="form-control" />
        <br />
        <label>Ana Kapak Fotoğrafı</label>
        <input type="text" asp-for="MainImageUrl" class="form-control" />
        <br />
        <label>Detaylar</label>
        <textarea rows="5" asp-for="Detail" class="form-control"></textarea>
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
        <br />
        <button class="btn btn-warning">Yazıyı Güncelle</button>
    </div>
</form>



